<!doctype html>
<html lang="en">
  <head>
    <meta name="description" content="content" charset="utf-8">
    <meta name="description" http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
    <link rel="canonical" href="{{ canonical_url }}">
    {{ 'style.main.css' | asset_url | stylesheet_tag }}
    {{ 'style.typography.css' | asset_url | stylesheet_tag }}
    <title>Jewelry | Title</title>
    {{ content_for_header }} <!-- Header hook for plugins -->

    <!-- Swiper.js -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.css"
    />

    <script src="{{ 'script.cart.js' | asset_url }}" defer></script>

    <style>
      @font-face {
        font-family: 'SF New Republic';
        src: url('SF New Republic'), url({{ 'SFNewRepublicBold.woff' | asset_url }}) format('woff');
      }
    </style>
  </head>

  <body id="body" class="{% if template == 'index' %}home{% endif %}">
      {% section 'announcement-bar' %}
      {% section 'header' %}
      {% section 'cart-section' %}

      <main role="main">
        {{ content_for_layout }}
      </main>
      {% section 'footer2' %}
      
      <!-- Swiper JS -->
      <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
  
{% include 'swymSnippet' %}

 {% include 'smile-initializer' %}

</body>
</html>