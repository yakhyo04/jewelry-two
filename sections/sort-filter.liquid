        <div class="sort__wrapper">

        <div class="active__filters--div sort__by">
        <p class="active__filters--title sort__label">Sort By</p>
        <select class="sort-by sort__select" id="sort-by">
            {% assign sort_by = collection.sort_by | default: collection.default_sort_by %}
        
            {% for option in collection.sort_options %}
            <option class="sort__option" value="{{ option.value }}" {% if option.value == sort_by %}selected="selected"{% endif %}>
                {{ option.name }}
            </option>
            {% endfor %}
        </select>
        </div>

        <div class="sort__collections">
          <p class="sort__label" for="sort_collections">Collections</p>
          <select class="sort__select" id="sort_collections">
              {% for collection in collections %}
                  <script>
                    console.log({{ collection | json }});
                  </script>
                <option value="{{ collection.title }}">{{ collection.title }}</option>
                {% endfor %}
            </select>
          </div>
    </div>
    </div>

