{{ 'style.featured-products.css' | asset_url | stylesheet_tag }}

{% if product.metafields.accentuate.you_might_also_like %}
    {% assign selected_handles = product.metafields.accentuate.you_might_also_like | split: '|' %}
    {% for product in selected_handles %}
    <div class="products">
        <div class="products__container">
            <!-- <h3 class="product__title">{{ all_products[product].title }}</h3> -->
            <div class="products__wrapper">
                <div class="product__item" id="shield">
                        <img class="product__image" src="{{ all_products[product].featured_image | img_url: 'large' }}" alt="{{ all_products[product].featured_image }}">
                        <div class="product__content">
                            <h3>{{ all_products[product].title }}</h3>
                        <h5 class="product__money" >{{ all_products[product].price | money }}</h5>
                        </div>
                    </div>
            </div>
        </div>
    </div>
    {% endfor %}
{% endif %}


<style>
    .product__item{
        background-image: url('../assets/svg.product-tile.svg');
        background-repeat: no-repeat;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 256px;
        height: 100%;
    }
    .product__image{
        position: relative;
        overflow: hidden;
        border-top-left-radius: 50%;
        border-top-right-radius: 50%;
        margin-top: 10%;
        width: 100%;
        height: 100%;
    }
    .product__content{
        position: absolute;
        bottom: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
    }
</style>